<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="registerFragment"
            type="com.keygeldi.kisileruygulamas1.ui.fragment.RegisterFragment" />
        <!--<variable

            name="loginAdapter"
            type="com.keygeldi.kisileruygulamas1.ui.adapter.AccountAdapter" />
        <variable -->
        <variable
            name="RegisterViewModel"
            type="com.keygeldi.kisileruygulamas1.ui.viewmodel.RegisterViewModel" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@color/white"
        android:orientation="vertical"
        android:rotationX="0">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="160dp"
            android:layout_marginRight="30dp"
            android:backgroundTint="@color/purple"
            app:cardCornerRadius="30dp"
            app:cardElevation="100dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="20dp"
                tools:layout_editor_absoluteX="1dp"
                tools:layout_editor_absoluteY="1dp">

                <TextView
                    android:id="@+id/loginText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Register"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="36dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/username"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="35dp"

                    android:background="@drawable/custom_edittext_register"
                    android:drawableLeft="@drawable/login_person"
                    android:drawablePadding="8dp"
                    android:drawableTint="@color/white"
                    android:hint="Username"
                    android:padding="7dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/white"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/custom_edittext_register"
                    android:drawableLeft="@drawable/lock_person"
                    android:drawablePadding="8dp"
                    android:drawableTint="@color/white"
                    android:hint="Password"
                    android:padding="7dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/white"
                    android:textSize="15dp" />

                <Button
                    android:id="@+id/sign_finish_button"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="@color/white"
                    android:text="Sign up"
                    android:textColor="@color/purple"
                    android:textSize="20dp"
                    app:cornerRadius="4dp" />

                <!-- TextView ve Button aynı satırda yer alacak şekilde LinearLayout içinde -->


            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</layout>
