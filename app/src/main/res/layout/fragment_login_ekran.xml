<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="loginFragment"
            type="com.keygeldi.kisileruygulamas1.ui.fragment.LoginFragment" />
        <variable
            name="loginAdapter"
            type="com.keygeldi.kisileruygulamas1.ui.adapter.AccountAdapter" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:rotationX="0">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_edittext"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="20dp"
                tools:layout_editor_absoluteX="1dp"
                tools:layout_editor_absoluteY="1dp">

                <TextView
                    android:id="@+id/loginText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Login"
                    android:textAlignment="center"
                    android:textColor="@color/purple"
                    android:textSize="36dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/username"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="35dp"
                    android:background="@drawable/custom_edittext"
                    android:drawableLeft="@drawable/login_person"
                    android:drawablePadding="8dp"
                    android:hint="Username"
                    android:padding="7dp"
                    android:textColor="@color/black"
                    android:textSize="15dp"/>

                <EditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/custom_edittext"
                    android:drawableLeft="@drawable/lock_person"
                    android:drawablePadding="8dp"
                    android:hint="Password"
                    android:padding="7dp"
                    android:textColor="@color/black"
                    android:textSize="15dp"/>


                <Button
                    android:id="@+id/log_button"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="@color/purple"
                    android:text="LOGIN"
                    android:textSize="20dp"
                    app:cornerRadius="4dp" />

                <!-- TextView ve Button aynı satırda yer alacak şekilde LinearLayout içinde -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Don't have an account? "
                        android:layout_marginLeft="45dp"
                        android:textAlignment="viewStart"
                        android:textColor="@color/black" />

                    <Button
                        android:id="@+id/sign_button"
                        android:layout_width="55dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="5dp"
                        android:backgroundTint="@color/white"
                        android:gravity="center"
                        android:padding="2dp"
                        android:text="Sign up"
                        android:textColor="@color/purple" />
                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</layout>
